<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_selector"
    android:backgroundTint="@null"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/ic_close" />

    <ScrollView
        android:id="@+id/scroller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/close"
        android:fillViewport="true"
        android:requiresFadingEdge="vertical"
        android:scrollbars="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_doc_key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:fontFamily="@font/helvetica_neue_medium"
                android:lineSpacingMultiplier="1"
                android:text="Документ АААА.000000.000"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/bg_menu"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/txt_doc_name_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_doc_key"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/helvetica_neue_bold"
                android:lineSpacingMultiplier="1"
                android:paddingBottom="15dp"
                android:text="Описание"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/bg_menu"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/txt_doc_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_doc_name_title"
                android:layout_marginHorizontal="15dp"
                android:fontFamily="@font/helvetica_neue_medium"
                android:lineSpacingMultiplier="1.1"
                android:paddingBottom="15dp"
                android:text="Код класса "
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/bg_menu"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/txt_comment_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_doc_name"
                android:layout_marginHorizontal="15dp"
                android:fontFamily="@font/helvetica_neue_bold"
                android:lineSpacingMultiplier="1"
                android:paddingBottom="15dp"
                android:text="Комментарий"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/bg_menu"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/txt_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_comment_title"
                android:layout_marginHorizontal="15dp"
                android:fontFamily="@font/helvetica_neue_medium"
                android:text="Комментарий"
                android:lineSpacingMultiplier="1"
                android:paddingBottom="15dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/bg_menu"
                android:textSize="22sp" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>